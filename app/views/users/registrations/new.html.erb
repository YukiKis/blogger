<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <h2 class="text-center">新規登録</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
    <div class="form-group form-inline">
      <%= f.label :first_name, "苗字", class: "control-label" %><br>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
    <div class="form-group form-inline">
      <%= f.label :last_name, "名前", class: "control-label" %><br>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
    <div class="form-group form-inline">
      <%= f.label :email, "メールアドレス", class: "control-label" %><br>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group form-inline">
      <%= f.label :password, "パスワード", class: "control-label" %><br>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group form-inline">
      <%= f.label :password_confirmation, class: "control-label" %><br>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
    <div class="submit-btn">
      <%= f.submit "作成" %>
    </div>
  <% end %>
      
    </div>
  </div>
</div>